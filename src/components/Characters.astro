---
const characters = [
  {
    id: 1,
    name: "店主",
    role: "記憶操作師",
    description: "謎めいた笑顔を浮かべる記憶の専門家。お客の心の奥底を見透かし、消したい記憶を巧みに操る。",
    image: "/api/placeholder/300/400"
  },
  {
    id: 2,
    name: "ユウ",
    role: "悩める学生",
    description: "過去のトラウマに苦しむ大学生。記憶を消すことで新しい人生を歩もうとしている。",
    image: "/api/placeholder/300/400"
  },
  {
    id: 3,
    name: "ミサキ",
    role: "失恋の女性",
    description: "愛する人を失った痛みから逃れたい。しかし本当に記憶を消すべきなのか迷っている。",
    image: "/api/placeholder/300/400"
  },
  {
    id: 4,
    name: "タケシ",
    role: "罪悪感を抱く男",
    description: "過去の過ちに苛まれ続ける中年男性。記憶を消すことが本当の解決になるのだろうか。",
    image: "/api/placeholder/300/400"
  }
]
---

<section id="characters" class="section-padding bg-gradient-to-b from-black to-gray-900 text-white">
  <div class="container-max">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-purple-300">
      登場人物
    </h2>
    <p class="text-xl text-gray-300 text-center mb-16 max-w-3xl mx-auto">
      記憶の迷宮で出会う、心に傷を抱えた人々
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {characters.map((character) => (
        <div key={character.id} class="bg-gray-800/80 rounded-lg shadow-lg overflow-hidden hover:shadow-xl hover:bg-gray-800/90 transition-all duration-300 border border-purple-500/20">
          <div class="aspect-[3/4] bg-gradient-to-br from-gray-700 to-purple-900 flex items-center justify-center text-purple-200 text-6xl font-bold border-b border-purple-500/30">
            {character.name[0]}
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-2 text-white">{character.name}</h3>
            <p class="text-purple-300 font-semibold mb-3">{character.role}</p>
            <p class="text-gray-300 leading-relaxed">{character.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>