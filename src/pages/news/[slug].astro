---
import { getNewsArticle, getAllNewsSlugs } from '../../lib/news'

export async function getStaticPaths() {
  const slugs = getAllNewsSlugs()
  return slugs.map((slug) => ({
    params: { slug },
  }))
}

const { slug } = Astro.params
const article = getNewsArticle(slug!)

if (!article) {
  return Astro.redirect('/404')
}

const getCategoryColor = (category: string) => {
  const colors: { [key: string]: string } = {
    'キャラクター': 'bg-blue-100 text-blue-800',
    'アップデート': 'bg-green-100 text-green-800',
    'コンテンツ': 'bg-purple-100 text-purple-800',
    'インタビュー': 'bg-orange-100 text-orange-800',
    '音楽': 'bg-pink-100 text-pink-800',
    'お知らせ': 'bg-gray-100 text-gray-800'
  }
  return colors[category] || 'bg-gray-100 text-gray-800'
}
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{article.title} - memOriedit</title>
  <meta name="description" content={article.excerpt}>
</head>
<body>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="container-max py-4">
        <a 
          href="/"
          class="text-2xl font-bold text-blue-600 hover:text-blue-700 transition-colors"
        >
          ゲームタイトル
        </a>
      </div>
    </header>

    <!-- Breadcrumb -->
    <nav class="bg-white border-b">
      <div class="container-max py-3">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/" class="hover:text-blue-600 transition-colors">
            ホーム
          </a>
          <span>/</span>
          <a href="/news" class="hover:text-blue-600 transition-colors">
            ニュース
          </a>
          <span>/</span>
          <span class="text-gray-900">{article.title}</span>
        </div>
      </div>
    </nav>

    <!-- Article -->
    <main class="container-max py-12">
      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <div class="flex items-center space-x-4 mb-4">
            <span class={`px-3 py-1 rounded-full text-sm font-semibold ${getCategoryColor(article.category)}`}>
              {article.category}
            </span>
            <time class="text-gray-500">{article.date}</time>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            {article.title}
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            {article.excerpt}
          </p>
        </header>

        <div class="bg-white rounded-lg shadow-lg p-8">
          <div 
            class="prose prose-lg max-w-none"
            set:html={article.content}
          />
        </div>

        <!-- Navigation -->
        <div class="mt-12 flex justify-between items-center">
          <a 
            href="/news"
            class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold transition-colors"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M15 19l-7-7 7-7" />
            </svg>
            ニュース一覧に戻る
          </a>
          
          <a 
            href="/"
            class="bg-blue-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-blue-700 transition-colors"
          >
            ホームに戻る
          </a>
        </div>
      </article>
    </main>
  </div>
</body>
</html>